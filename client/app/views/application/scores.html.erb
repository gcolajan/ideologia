	</tr>
	
	<% for score in @listeScores %>
	<tr>
		<td><%=score[0] %></td>
		<td><span style="font-weight:bold; background-color:#<%= score[4] %>;"><%=score[3] %></span></td>
		<td><%=(score[2]*100).round %> %</td>
		<td><%=((1-score[1])*100).round %> %</td>
	</tr>
	<% end %>

	
	
	
